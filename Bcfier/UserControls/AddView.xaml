<UserControl
  x:Class="Bcfier.UserControls.AddView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:themes="clr-namespace:Bcfier.Themes"
  xmlns:rws="clr-namespace:Renga.WPF.Styles;assembly=Renga.WPF.Styles"
  xmlns:utils="clr-namespace:Bcfier.Data.Utils"
  xmlns:lex="http://wpflocalizeextension.codeplex.com"
  lex:LocalizeDictionary.DesignCulture="en-US"
  lex:ResxLocalizationProvider.DefaultAssembly="BCFier"
  lex:ResxLocalizationProvider.DefaultDictionary="Strings"
  Width="300"
  AllowDrop="True"
  DragEnter="Window_DragEnter"
  DragLeave="Window_DragLeave"
  DragOver="Window_DragOver"
  Drop="Window_Drop">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" Margin="0, 0, 0, 13">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Canvas
        Name="whitespace"
        Grid.RowSpan="8"
        Grid.ColumnSpan="6"
        Panel.ZIndex="100"
        Background="WhiteSmoke"
        Opacity=".70"
        Visibility="Collapsed" />
      <StackPanel Grid.Row="0" Orientation="Horizontal">
        <Button Margin="5" Click="Button_LoadImage" ToolTip="{lex:Loc Key=Browse}">
          <Button.Style>
            <Style TargetType="Button" >
              <Setter Property="Background" Value="Transparent" />
              <Setter Property="BorderThickness" Value="0" />
            </Style>
          </Button.Style>
         <Button.Content>
            <Image Source="../Assets/i24_open.png"/>
           </Button.Content>
        </Button>
          <Button Margin="0,5,5,5" Click="EditSnapshot_Click"  ToolTip="{lex:Loc Key=Annotate}">
          <Button.Style>
            <Style TargetType="Button" >
              <Setter Property="Background" Value="Transparent" />
              <Setter Property="BorderThickness" Value="0" />
            </Style>
          </Button.Style>
          <Button.Content>
            <Image Source="../Assets/i24_edit.png"/>
           </Button.Content>
         </Button>
        <Button Margin="0,5,5,5" Click="Button_RemoveImage" ToolTip="{lex:Loc Key=Remove}">
          <Button.Style>
            <Style TargetType="Button" >
              <Setter Property="Background" Value="Transparent" />
              <Setter Property="BorderThickness" Value="0" />
            </Style>
          </Button.Style>

          <Button.Content>
            <Image Source="../Assets/i24_delete.png"/>
            </Button.Content>
         </Button>
            </StackPanel>
      <Image
        x:Name="SnapshotImg"
        Grid.Row="1"
        Margin="5">
        <Image.Effect>
          <DropShadowEffect
            Opacity="0.5"
            BlurRadius="10"
            Direction="316"
            ShadowDepth="1" />
        </Image.Effect>
      </Image>
      <!--<Label x:Name="PathLabel" Content="Path" FontStyle="Italic" Height="20" Padding="0" Margin="5, 5" Grid.Row="2"  Foreground="#FF898989"  />-->
    </Grid>
    <StackPanel Grid.Row="1" Margin="0, 0, 0, 8" Orientation="Vertical" rws:MarginSetter.Margin="0,0,0,5">
      <TextBlock Name="TextBlockComment" Text="{lex:Loc Key=Comment}"/>
      <TextBox x:Name="CommentBox" Height="70" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
      </TextBox>
    </StackPanel>
    <StackPanel
      Grid.Row="2"
      Grid.ColumnSpan="2"
      HorizontalAlignment="Right"
      Orientation="Horizontal"
      rws:MarginSetter.Margin="9,0,0,0">
      <Button
        Click="Button_OK"
        Content="{lex:Loc Key=OK}"
        IsDefault="True" />
      <Button
        Click="Button_Cancel"
        Content="{lex:Loc Key=Cancel}" />
    </StackPanel>
  </Grid>
</UserControl>